# Example environment variables for Ball Mill Monitoring System

# --- Web/Frontend ---
PORT=65500                              # Port for Next.js server (used by Next.js itself)
NEXT_PUBLIC_WEB_PORT=65500              # (Optional) Port for use in frontend/browser code
NEXT_PUBLIC_WEB_HOST=localhost          # Host for Next.js frontend

# --- Pipeline Server ---
PIPELINE_SERVER_HOST=localhost
PIPELINE_SERVER_PORT=65501

# --- Audio Server ---
AUDIO_SERVER_HOST=localhost
AUDIO_SERVER_PORT=65502

# --- Playback Server ---
PLAYBACK_SERVER_HOST=localhost
PLAYBACK_SERVER_PORT=65503

# --- Siemens PLC Server ---
PLC_SERVER_HOST=localhost
PLC_SERVER_PORT=65504

# --- Raspberry Pi ---
RPI_IP=192.168.1.100                     # Example RPI IP address
RPI_VALVE_PINS=22,27,17                  # GPIO pins for valves (comma-separated)

# --- PLC Hardware ---
PLC_IP=10.135.1.100                   # Siemens PLC hardware IP
PLC_RACK=0
PLC_SLOT=1

# --- Database ---
DATABASE_URL=postgresql://user:password@host:port/dbname

# --- YouTube Streams (example) ---
YOUTUBE_STREAM_ID_TCSRI=your_stream_id
YOUTUBE_STREAM_ID_IITKGP=your_stream_id
YOUTUBE_STREAM_ID_TCS_JAM=your_stream_id
YOUTUBE_STREAM_ID_PIPELINE=your_stream_id

# --- Miscellaneous ---
POLL_INTERVAL=2                          # Polling interval in seconds for poller scripts

# Add any other environment-specific variables below as needed 
NEXT_PUBLIC_PRESSURE_WS_URL=ws://YOUR_AZURE_VM_PUBLIC_IP:65506
NEXT_PUBLIC_PRESSURE_HTTP_PORT=65507

# Control Server Configuration
# NEXT_JS_HOST=localhost
# NEXT_JS_PORT=65500  # Next.js server port
# PRESSURE_WS_HOST=localhost
# PRESSURE_WS_PORT=65506  # Pressure WebSocket port
CONTROL_SERVER_PORT=65508  # Control server port (changed from 65507)

# Control Client Configuration (for remote usage)
CONTROL_SERVER_HOST=localhost  # Change to Azure VM IP for remote control

# Pressure Server
NEXT_PUBLIC_PRESSURE_WS_URL=ws://YOUR_AZURE_VM_PUBLIC_IP:65506  # Used by frontend and control server
PRESSURE_HTTP_URL=http://localhost:65507/latest_pressure           # Used by control server for polling pressure